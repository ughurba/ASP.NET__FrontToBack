@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    
  <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic form elements</h4>
                  <p class="card-description">
                    Create Category
                  </p>
                  <form class="forms-sample"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label asp-for="Name">Name</label>
                      <input asp-for="Name"  class="form-control"  placeholder="Name">
                      <span class="text-danger" asp-validation-for="Name"></span>  
 
                  </div>
                     <div class="form-group">
                      <label asp-for="Price">Price</label>
                      <input asp-for="Price"  class="form-control"  placeholder="Price">
                      <span class="text-danger" asp-validation-for="Price"></span>  
 
                  </div>
                     <div class="form-group">
                      <label asp-for="Count">Count</label>
                      <input asp-for="Count"  class="form-control"  placeholder="Count">
                      <span class="text-danger" asp-validation-for="Count"></span>  
 
                  </div>
                <label asp-for="CategoryId">CategoryId</label>
                  <select  asp-for="CategoryId" class="form-select" aria-label="Default select example">
                      <option selected>Open this select menu</option>
                      @foreach (Category item in ViewBag.Categories)
                     {
                         <option value="@item.id">@item.Name</option>
                     }
                   
                </select>
                  <span class="text-danger" asp-validation-for="CategoryId"></span>  

                      <div class="form-group">
                      <label asp-for="Photo">Count</label>
                      <input asp-for="Photo"  class="form-control" >
                      <span class="text-danger" asp-validation-for="Photo"></span>  
 
                  </div>
               
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                   <a class="btn btn-dark" asp-action="index">Go back</a>
                  </form>
                </div>
              </div>
            </div>
</div>

