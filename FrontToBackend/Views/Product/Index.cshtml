
@model List<Product>
@{
    ViewData["Title"] = "Index";

}

<section id="products">
    <input type="hidden" id="productCount" value="@ViewBag.ProductCount"/>
            <div class="container">
               
                <div id="productList"  class="row">
                   @foreach (var item in Model)
                   {
                        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.category.Name.ToLower()">
                            <div class="img">
                                <a asp-controller="home" asp-action="detail" asp-route-id="@item.id">
                                    <img src="~/img/@item.imgUrl" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                               <a   data-id="@item.id" class="addItem"> <span class="text-black-50">Add to cart</span> </a> 
                                <span class="text-black-50">$@item.Price </span>
                            </div>
                        </div>
                    </div>
                   }
            
                </div>

                <div class="row justify-content-center">
                    <button id="button" class="btn btn-primary">Load more...</button>
                </div>
            </div>
        </section>




